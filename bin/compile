#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

BUILD_DIR=${1:-}

echo "-----> generate credentials file"
mkdir -p $BUILD_DIR/.profile.d

echo "echo ${JSON_CREDENTIALS@Q} -> /app/google-credentials.json" > $BUILD_DIR/.profile.d/google-credentials.sh
chmod +x $BUILD_DIR/.profile.d/google-credentials.sh

echo "-----> generate finish"